<h3 class="page-header">
  Customers 
  <div class="pull-right">
    <h4>
      <%= link_to new_customer_path do %>
        <i class="fa fa-plus-circle"></i>
      <% end %>
    </h4>
  </div>
  <div class="container">
    <div class="form-group">
      <%= form_tag customers_path, :method => 'get' do %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search" %>
      <% end %>
    </div>
  </div>
</h3>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Sex</th>
      <th>DOB</th>
      <th>Nationality</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |c| %>
      <tr>
        <td><%= link_to c.full_name.titleize, c %></td>
        <td><%= c.sex.titleize %></td>
        <td><%= c.dob %></td>
        <td><%= c.nationality.titleize %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Back", :back, :class => "btn btn-default" %>
