<h1>Log In</h1>

<%= form_tag sessions_path, class: "form-horizontal" do %>
	
	<div class="form-group">
		<%= label_tag :email, "E-Mail", class: "col-sm-2 control-label" %>
		<div class="col-sm-6">
    	<%= email_field_tag :email, params[:email], class: "form-control" %>
  	</div>
  </div>
  
  <div class="form-group">
		<%= label_tag :password, "Password", class: "col-sm-2 control-label" %>
		<div class="col-sm-6">
    	<%= password_field_tag :password, nil, class: "form-control" %>
  	</div>
  </div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-6">
	  	<%= submit_tag "Log In", class: "btn btn-default" %>
	  </div>
	</div>

<% end %>