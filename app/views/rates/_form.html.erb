<%= simple_form_for @rate, :html=> { class: 'form-horizontal' }, wrapper: :horizontal_form do |f| %>
  
  <%= f.error_notification %>

    <%= f.input :currency_pair_id, :collection => CurrencyPair.all, :label_method => :ccy_pair_name, :value_method => :id, :label => "Currency Pair" ,:include_blank => false %>

    <%= f.input :rate %>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-6">
        <%= f.submit "Submit", class: "btn btn-default" %>

<% end %>