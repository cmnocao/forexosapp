<h3 class="page-header">
  Currency Pairs 
  <div class="pull-right">
    <%= link_to new_currency_pair_path do %>
      <i class="fa fa-plus-circle"></i>
    <% end %>
  </div>
</h3>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Currency Pair</th>
      <th>Current Rate</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @currency_pairs.each do |c| %>
      <tr>
        <% if current_user.admin? %>
          <td><%= link_to c.ccy_pair_iso, c %></td>
         <% else %>
          <td><%= c.ccy_pair_iso %></td>
        <% end %>
        <td><%= ccy_pair_current_rate(c) %></td>
        <% if current_user.admin? %>
          <td><%= link_to "Update Rate", new_rate_path(c) %></td>
        <% else %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Back", :back, :class => "btn btn-default" %>
