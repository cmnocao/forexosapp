<%= simple_form_for [@customer, @transaction], :html=> { class: 'form-horizontal' }, wrapper: :horizontal_form do |f| %>
  
  <%= f.error_notification %>

    <%= f.input :currency_pair_id, :collection => CurrencyPair.order(:ccy_pair_iso), label_method: :ccy_pair_iso, value_method: :id, :label => "Currency Pair" ,include_blank: true %>

    <%= f.input :rate_id, collection: CurrencyPair.order(:ccy_pair_iso), as: :grouped_select, group_method: :rates, label_method: :rate, group_label_method: :ccy_pair_iso %>

    <%= f.input :fr_amount, :input_html => {:onkeydown => 'calculate();'} %>

    <%= f.input :to_amount, readonly: true %>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-6">
        <%= f.submit "Submit", class: "btn btn-default" %>

<% end %>