<h3 class="page-header">
  <%= @transaction.currency_pair.ccy_pair_iso.upcase %>
  <small>
    <%= @transaction.class %>
  </small>
</h3>
<div class="row">
  <div class="col-md-8">
    <h5>Name:</h5>
    <%= @transaction.customer.full_name %>
