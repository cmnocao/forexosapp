<h3 class="page-header">
  Countries <span class="badge"><%= Country.count %></span>
  <div class="pull-right">
    <%= link_to new_country_path do %>
      <i class="fa fa-plus-circle"></i>
    <% end %>
  </div>
</h3>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>ISO2</th>
      <th>ISO3</th>
      <th>Capital Name</th>
    </tr>
  </thead>
  <tbody>
    <% @countries.each do |c| %>
      <tr>
        <td>
        <%= image_tag "flags_iso/16/#{c.iso2.downcase}.png", alt: "#{c.name}", class: "img-rounded" %>
          <%= link_to c.name.titleize, c %></td>
        <td><%= c.iso2.upcase %></td>
        <td><%= c.iso3.upcase %></td>
        <td><%= c.capital_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Back", :back, :class => "btn btn-default" %>
