<h3 class="page-header">
  Cities <span class="badge"><%= City.count %></span>
  <div class="pull-right">
    <h4>
      <%= link_to new_city_path do %>
        <i class="fa fa-plus-circle"></i>
      <% end %>
    </h4>
  </div>
</h3>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>State</th>
      <th>Country</th>
    </tr>
  </thead>
  <tbody>
    <% @cities.each do |c| %>
      <tr>
        <td><%= link_to c.name.titleize, c %></td>
        <td><%= link_to c.state.name, state_path(c.state_id) %></td>
        <td><%= link_to c.state.country.name, country_path(c.state.country_id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Back", :back, :class => "btn btn-default" %>